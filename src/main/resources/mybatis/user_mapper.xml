<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.app.ayofit.mapper.UserMapper">

	<select id="getAllUserProfile" resultType="UserDTO">
		select * from spring_test
	</select>

	<select id="getUserProfile" resultType="UserDTO">
		select * from spring_test where id = #{id}
	</select>

	<insert id="setUserProfile">
		insert into spring_test values(#{id}, #{pw}, #{name})
	</insert>

	<update id="updateUserProfile">
		update spring_test
		set id = #{newId}, pw = #{pw}, name = #{name}
		where id = #{oldId}
	</update>

	<delete id="deleteUserProfile">
		delete spring_test where id = #{id}
	</delete>
	
</mapper>